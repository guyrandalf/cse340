<% if (title) { %>
    <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>
  
  <%- messages() %>
  
  <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
  
  <div class="management-links">
    <a href="/inv/addclass">Add New Classification</a>
    <a href="/inv/addvehicle">Add New Vehicle</a>
  </div>
  
  <form class="form--fieldset" action="">
    <label for="classification_id">Classification:</label>
    <select name="classification_id" id="classification_id">
      <%- classSelect %>
    </select>
  </form>